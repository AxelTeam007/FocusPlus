{
  "manifest_version": 3,
  "name": "FocusPlus",
  "version": "1.0",
  "description": "Une extension pour Ãªtre plus productif et moins distrait.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "storage",
    "activeTab",
    "declarativeNetRequest",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://x.com/*"],
      "js": ["x-block.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://www.tiktok.com/*"],
      "js": ["tiktok-block.js"],
      "run_at": "document_start"
    }
  ]
}
